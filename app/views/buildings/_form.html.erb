<h1>Add a Building</h1>
<hr>

<%= simple_form_for @building do |f| %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state, collection: [ "AL", "AK", "AS", "AZ", "AR", "CA", "CO", "CT", "DE", "DC", "FL", "GA", "HI", "ID", "IL", "IN", "IA", "KS", "KY", "LA", "ME", "MD", "MA", "MI", "MN", "MS", "MO", "MT", "NE", "NV", "NH", "NJ", "NM", "NY", "NC", "ND", "OH", "OK", "OR", "PA", "RI", "SC", "SD", "TN", "TX", "UT", "VT", "VA", "WA", "WV", "WI", "WY"]%>
  <%= f.input :zip_code %>
  <%= f.input :description %>

  <%= f.association :owner,label_method: :last_name, prompt: "Choose a Owner by Last Name" %>
  <%= f.submit 'Add Building' %>
<% end %>
<hr>
